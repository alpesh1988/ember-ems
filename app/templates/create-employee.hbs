
<LinkTo @route="employee" class="btn btn-primary"><i class="material-icons ema-material-icon">keyboard_arrow_left</i> Go to employee list</LinkTo>
    
<div id="ema-create-employee-form" class="jumbotron text-center">

    <h2 class="ema-mb1">Create employee</h2>

    <form onsubmit={{ action "onsubmit" }}>
        <div class="form-group">
            {{ input type="text" id="firstname" class="form-control" placeholder="Enter first name" value=firstname }}
        </div>
        <div class="form-group">
            {{ input type="text" id="lastname" class="form-control" placeholder="Enter last name" value=lastname }}
        </div>
        <div class="form-group">
            {{ input type="text" id="address" class="form-control" placeholder="Enter address" value=address }}
        </div>
        <div class="form-group">
            {{ input type="text" id="salary" class="form-control" placeholder="Enter salary" value=salary }}
        </div>
        <div class="form-group">
            {{ input type="text" id="email" class="form-control" placeholder="Enter email" value=email }}
        </div>
        <BsButton @type="primary" class="btn-block" @onClick={{action "onsubmit"}}>Create</BsButton>
    </form>
</div>